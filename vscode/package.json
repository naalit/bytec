{
    "name": "bytec-basic",
    "displayName": "bytec-basic",
    "description": "Syntax highlighting support for the bytec compiler's language",
    "version": "0.0.1",
    "main": "./out/extension.js",
    "engines": {
        "vscode": "^1.53.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "activationEvents": [
        "onLanguage:bytec"
    ],
    "contributes": {
        "languages": [{
            "id": "bytec",
            "aliases": ["bytec"],
            "extensions": [".bt"],
            "configuration": "./language-configuration.json"
        }],
        "grammars": [{
            "language": "bytec",
            "scopeName": "source.bytec",
            "path": "./syntaxes/bytec.tmLanguage.json"
        }],
        "snippets": [{
            "language": "bytec",
            "path": "./snippets.json"
        }]
    },
    "scripts": {
        "vscode:prepublish": "npm run build",
        "build": "tsc -p ./",
        "watch": "tsc -watch -p ./"
    },
    "dependencies": {
        "vscode-languageclient": "^7.0.0"
    },
    "devDependencies": {
        "@types/node": "^17.0.23",
        "@types/vscode": "^1.63.0",
        "@vscode/test-electron": "^2.1.2",
        "typescript": "^4.6.3"
    }
}